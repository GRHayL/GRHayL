# Root marker for the configuration
root = true

# General settings for all files
[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override for specific file types
[*.py]
indent_size = 4

[*.c]
indent_size = 2
